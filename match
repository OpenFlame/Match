JavaJar(
    name = "Match"
    source = Find("source")
    main-class = "match.Match"
    library = [
        "Config"
    ]
)

JavaJar(
    name = "MatchTest"
    source = Find("tests/source")
    main-class = "match.AllTests"
    library = [
        "Match"
        "Config"
        "junit"
        "hamcrest-core"
        "mockito-all"
    ]
)

JavaJUnit(
    name = "MatchTestResult"
    library = [
        "MatchTest"
        "Match"
        "Config"
    ]
    main-class = "match.AllTests"
)

Release(
    source = "Match"
    version = "0.4"
    extension = "jar"
    channel = "cp %s $HOME/match/libraries/"
    await = "MatchTestResult"
)
